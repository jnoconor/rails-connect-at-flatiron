<%= form_for [@cohort, @student], :html => {:class => 'form-horizontal'} do |f| %>
  <fieldset>
    <legend><%= student_name %></legend>
      <div class="form-group">
        <%= f.label :full_name, :class => 'col-md-2' %>
        <%= f.text_field :full_name, :class => 'col-md-10' %>
      </div>
      <div class="form-group">
        <%= f.label :twitter, :class => 'col-md-2' %>
        <%= f.text_field :twitter, :class => 'col-md-10', :placeholder => "Twitter URL" %>
      </div>
      <div class="form-group">
        <%= f.label :linkedin, :class => 'col-md-2' %>
        <%= f.text_field :linkedin, :class => 'col-md-10', :placeholder => "LinkedIn URL" %>
      </div>
      <div class="form-group">
        <%= f.label :github, :class => 'col-md-2' %>
        <%= f.text_field :github, :class => 'col-md-10', :placeholder => "GitHub URL" %>
      </div>
      <div class="form-group">
        <%= f.label :quote, :class => 'col-md-2' %>
        <%= f.text_field :quote, :class => 'col-md-10' %>
      </div>
      <div class="form-group">
        <%= f.label :bio, :class => 'col-md-2' %>
        <%= f.text_area :bio, :class => 'col-md-10', :rows => 5 %>
      </div>
      <div class="form-group">
        <%= f.label :work_title, "Work Title", :class => 'col-md-2' %>
        <%= f.text_field :work_title, :class => 'col-md-10' %>
      </div>
      <div class="form-group">
        <%= f.label :education, :class => 'col-md-2' %>
        <%= f.text_field :education, :class => 'col-md-10' %>
      </div>
      <div class="form-group">
        <%= f.label :profile_image, "Image URL", :class => 'col-md-2' %>
        <%= f.text_field :profile_image, :class => 'col-md-10' %>
      </div>
      <div class="form-group">
        <span class="col-md-offset-2 col-md-10">
          <%= link_to "Cancel", cohort_path(@cohort), :class => "btn btn-default" %>
          <%= f.submit :class => 'btn btn-success' %>
        </span>
      </div>
  </fieldset>
<%- end -%>

